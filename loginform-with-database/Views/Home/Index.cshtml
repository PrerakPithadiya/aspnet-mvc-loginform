@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h2>Welcome</h2>
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            @TempData["Success"]
                        </div>
                    }
                    else
                    {
                        <p>You have reached the home page.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
